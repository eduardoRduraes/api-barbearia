generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  appointments Appointments[]

  @@map("users")
}

model Client {
  id           String         @id @default(uuid())
  name         String
  phone        String         @unique
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  appointments Appointments[]

  @@map("clients")
}

model Appointments {
  id       String   @id @default(uuid())
  date     DateTime
  userId   String
  clientId String

  user   User   @relation(fields: [userId], references: [id])
  client Client @relation(fields: [clientId], references: [id])

  createdAt DateTime @default(now())

  @@map("appointments")
}
